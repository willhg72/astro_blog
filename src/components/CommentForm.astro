---
import { createClient } from '@supabase/supabase-js';

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

export interface Props {
  postId: string;
}

const { postId } = Astro.props;

let supabase;
if (supabaseUrl && supabaseKey) {
  supabase = createClient(supabaseUrl, supabaseKey);
}
---

<div class="comment-form">
  <div class="email-field">
    <input type="email" placeholder="Tu correo electrÃ³nico" class="email-input" required />
  </div>
  <textarea placeholder="Escribe tu comentario..." required></textarea>
  <button class="submit-button">Publicar comentario</button>
  <div class="debug-info" style="display: none;"></div>
</div>

<script>
  // Update the submit handler to use Supabase directly
  document.querySelector('.submit-button')?.addEventListener('click', async () => {
    const email = document.querySelector('.email-input').value.trim();
    const content = document.querySelector('.comment-form textarea').value.trim();
    
    if (email && content) {
      try {
        // Use Supabase client to insert comment
        const { error } = await supabase
          .from('comments')
          .insert({
            email,
            content,
            post_id: postId,
            created_at: new Date().toISOString()
          });

        if (error) throw error;
        
        // Clear form and reload comments
        document.querySelector('.email-input').value = '';
        document.querySelector('.comment-form textarea').value = '';
        window.location.reload();
        
      } catch (error) {
        console.error('Error submitting comment:', error);
        alert('Error al enviar el comentario: ' + error.message);
      }
    }
  });
</script>

<style>
  .comment-form {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  
  .email-field {
    margin-bottom: 1rem;
  }
  
  .email-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.375rem;
    font-family: inherit;
  }
  
  textarea {
    width: 100%;
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.375rem;
    min-height: 6rem;
    margin-bottom: 1rem;
    font-family: inherit;
    resize: vertical;
  }
  
  .submit-button {
    background-color: #1a202c;
    color: white;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    border: none;
    cursor: pointer;
    float: right;
    transition: background-color 0.2s;
  }
  
  .submit-button:hover {
    background-color: #2d3748;
  }
</style>